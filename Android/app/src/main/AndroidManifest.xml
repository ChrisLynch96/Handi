<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.handi.handi">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/handi_h"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activitys.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activitys.UserSignupActivity" />
        <activity android:name=".Activitys.LoginActivity" />
        <activity android:name=".Activitys.ResetPasswordActivity" />
        <activity android:name=".Activitys.MainActivity" />
        <activity android:name=".Activitys.LoginOrSignupActivity" />
        <activity android:name=".Activitys.HandiManSignupActivity" />
        <activity android:name=".Activitys.JobSelectionActivity" />
        <activity android:name=".Activitys.JobDescriptionActivity" >
        </activity>
        <activity android:name=".Activitys.SignUpChoiceActivity" />
        <activity
            android:name=".Activitys.UserHomeActivity"
            android:label="@string/title_activity_user_home"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activitys.ChooseHandiTypeActivity" />
        <activity
            android:name=".Activitys.HandiHomeActivity"
            android:label="@string/title_activity_handi_home"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".Activitys.AdminActivity"></activity>
        <activity android:name=".Activitys.HandiEditProfileActivity"/>
    </application>

</manifest>