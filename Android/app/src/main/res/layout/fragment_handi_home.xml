<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.handi.handi.Fragments.HandiHomeFragment">

    <TextView
        android:id="@+id/fragment_handi_home_text_view_jobs"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Jobs"
        android:textSize="@dimen/stan_header_text_size"
        android:textColor="@color/dark_pink"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:id="@+id/fragment_handi_home_relative_layout_jobs_border"
        android:layout_width="@dimen/linear_layout_user_handi_home_border"
        android:layout_height="214dp"
        android:layout_centerHorizontal="true"
        android:background="@color/dark_grey"
        android:layout_below="@id/fragment_handi_home_text_view_jobs">

        <ListView
            android:id="@+id/fragment_handi_home_list_view_jobs"
            android:layout_width="@dimen/list_view_width_user_handi_home"
            android:layout_height="204dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/android_standard_background"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
        </ListView>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_handi_home_text_view_job_offers"
        android:text="@string/Offers"
        android:textSize="@dimen/stan_header_text_size"
        android:textColor="@color/dark_pink"
        android:layout_below="@id/fragment_handi_home_relative_layout_jobs_border"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/fragment_handi_home_relative_layout_jobs_offers_borders"
        android:layout_width="@dimen/linear_layout_user_handi_home_border"
        android:layout_height="214dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fragment_handi_home_text_view_job_offers"
        android:background="@color/dark_grey">

        <ListView
            android:id="@+id/fragment_handi_home_list_view_jobs_offers"
            android:layout_width="@dimen/list_view_width_user_handi_home"
            android:layout_centerHorizontal="true"
            android:layout_height="204dp"
            android:background="@color/android_standard_background"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

        </ListView>
    </RelativeLayout>


</RelativeLayout>
