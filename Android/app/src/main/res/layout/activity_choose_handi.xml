<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_handi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.handi.handi.Activitys.ChooseHandiActivity">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/activity_job_selection_LinearLayout_painter"
        android:onClick="onClick">
        <ImageView
            android:id="@+id/activity_job_selection_image_view_painter"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tint="@color/dark_grey"
            android:src="@drawable/job_painter"
            android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/activity_job_selection_LinearLayout_painter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/activity_job_selection_LinearLayout_plumber"
        android:onClick="onClick"
        >
        <ImageView
            android:id="@+id/activity_job_selection_image_view_plumber"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tint="@color/dark_grey"
            android:src="@drawable/job_plumbing"
            android:contentDescription="@null" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:id="@+id/activity_job_selection_LinearLayout_handiman"
            android:layout_alignParentEnd="true"
            android:onClick="onClick">
            <ImageView
                android:id="@+id/activity_job_selection_image_view_handiman"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tint="@color/dark_grey"
                android:src="@drawable/job_handi"
                android:contentDescription="@null" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/activity_job_selection_LinearLayout_electrician"
            android:onClick="onClick">
            <ImageView
                android:id="@+id/activity_job_selection_image_view_electrician"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tint="@color/dark_grey"
                android:src="@drawable/job_electrician"
                android:contentDescription="@null" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/activity_job_selection_LinearLayout_cleaner"
            android:onClick="onClick">
            <ImageView
                android:id="@+id/activity_job_selection_image_view_cleaner"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tint="@color/dark_grey"
                android:src="@drawable/job_duster"
                android:layout_weight="1"
                android:contentDescription="@null" />
    </LinearLayout>
</RelativeLayout>
