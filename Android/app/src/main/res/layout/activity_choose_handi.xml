<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_handi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.handi.handi.Activitys.ChooseHandiTypeActivity">

    <LinearLayout
        android:id="@+id/activity_job_selection_LinearLayout_cleaner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:onClick="onClick">
      <ImageView
          android:id="@+id/activity_job_selection_image_view_cleaner"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:tint="@color/dark_grey"
          android:src="@drawable/ic_cleaner"
          android:contentDescription="@null" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_job_selection_text_view_cleaner"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_job_selection_LinearLayout_electrician"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/activity_job_selection_LinearLayout_cleaner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:onClick="onClick">
      <ImageView
          android:id="@+id/activity_job_selection_image_view_electrician"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:tint="@color/dark_grey"
          android:src="@drawable/ic_electrician"
          android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_job_selection_LinearLayout_painter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="200dp"
        android:onClick="onClick">
      <ImageView
          android:id="@+id/activity_job_selection_image_view_painter"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:tint="@color/dark_grey"
          android:src="@drawable/ic_painter"
          android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_job_selection_LinearLayout_plumber"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/activity_job_selection_LinearLayout_painter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:onClick="onClick">
      <ImageView
          android:id="@+id/activity_job_selection_image_view_plumber"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:tint="@color/dark_grey"
          android:src="@drawable/ic_plumber"
          android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_job_selection_LinearLayout_handiman"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:onClick="onClick">
      <ImageView
          android:id="@+id/activity_job_selection_image_view_handiman"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:tint="@color/dark_grey"
          android:src="@drawable/ic_tradesman"
          android:layout_weight="1"
          android:contentDescription="@null" />
    </LinearLayout>
</RelativeLayout>
