<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.handi.handi.Adapters.DisplayQuotesAdapter">

    <TextView
        android:id="@+id/list_item_text_view_quote_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Amount"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/standard_text_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/list_item_text_view_quote_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Name"
        android:textColor="@color/grey"
        android:textSize="@dimen/standard_text_size"
        android:layout_below="@+id/list_item_text_view_quote_amount"
        android:layout_alignLeft="@+id/list_item_text_view_quote_amount"
        android:layout_alignStart="@+id/list_item_text_view_quote_amount" />

</RelativeLayout>
