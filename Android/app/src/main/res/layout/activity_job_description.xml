<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Job Description"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/job_description_header"
        android:layout_weight="0.05"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_job_description_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_description_header">

        <EditText
            android:id="@+id/activity_job_description_text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Title"
            android:ems="10"
            android:maxLength="47"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_job_description_first_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_job_description_title_container">

        <EditText
            android:id="@+id/activity_job_description_edit_text_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="first name"
            android:ems="10"
            android:maxLength="47"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_job_description_second_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_job_description_first_name_container">

        <EditText
            android:id="@+id/activity_job_description_edit_text_second_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="second name"
            android:ems="10"
            android:maxLength="47"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_job_description_job_description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_job_description_second_name_container"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Put job description here"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:ems="10"
            android:id="@+id/activity_job_description_edit_text_users_job_description"
            android:maxLines="15"
            android:maxLength="140"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="@dimen/stan_button_width"
        android:layout_height="@dimen/stan_button_height"
        android:background="@color/norm_pink"
        android:text="Submit"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:onClick="onClick" />
</RelativeLayout>