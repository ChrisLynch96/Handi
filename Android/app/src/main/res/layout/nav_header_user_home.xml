<?xml version="1.0" encoding="utf-8"?>

<!--Header displayed at the top of the navigation drawer-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_title_padding_top"
        android:paddingLeft="@dimen/nav_header_title_padding_left"
        android:paddingBottom="@dimen/nav_header_title_padding_bottom"
        android:src="@drawable/ic_handi_text"
        tools:ignore="VectorDrawableCompat" />
</LinearLayout>
